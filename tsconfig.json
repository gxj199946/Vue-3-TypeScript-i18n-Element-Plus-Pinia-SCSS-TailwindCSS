{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  
  "compilerOptions": {
    // ... 其他选项
    "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
      "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]  // 注意这里，应该是 "./src/*" 而不是 ".src/*"
    }
  }
}
